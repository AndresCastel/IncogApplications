<UserControl x:Class="IncogStuffControl.UserControls.Scan.ScanIdCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IncogStuffControl.UserControls.Scan"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Name="txtRestriccion" >
            <TextBlock Text="Scan your Id Card" Foreground="#FF040404" >
            </TextBlock>
        </Label>
        <TextBox Width="0" Name="txtScan"  Focusable="True"  TextChanged="txtScan_TextChanged" LostFocus="TxtScan_LostFocus" KeyDown="TxtScan_KeyDown"   ></TextBox>
        <!--<Button Width="50" Height="30" Name="btnTest" Click="btnTest_Click"  >
            <TextBlock Text="scan">
            </TextBlock>
        </Button>-->
    </StackPanel>
</UserControl>
