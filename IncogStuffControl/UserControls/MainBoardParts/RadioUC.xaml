                <RadialGradientBrush 
          GradientOrigin="0.5,0.5" 
          Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                    <RadialGradientBrush.GradientStops>
                        <GradientStop Color="#EEF9ED" Offset="0" />
                        <GradientStop Color="#EEF9ED" Offset="0.25" />
                        <GradientStop Color="#EEF9ED" Offset="0.75" />
                        <GradientStop Color="#EEF9ED" Offset="1" />
                    </RadialGradientBrush.GradientStops>
                </RadialGradientBrush>
            </GroupBox.Background>
            <StackPanel Orientation="Horizontal">
            <StackPanel Height="auto" Width="auto" Orientation="Vertical" Margin="20,2,2,1"  >
                <StackPanel Orientation="Horizontal">
                    <CheckBox  VerticalAlignment="Center" Name="rbtRadio1" Style="{DynamicResource SliderCheckBox}" FontSize="15" FontWeight="Bold" Content="Radio 1"  Margin="0,5,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                        <CheckBox  VerticalAlignment="Center" Name="rbtRadio2" Style="{DynamicResource SliderCheckBox}" FontSize="15" FontWeight="Bold" Content="Radio 2"  Margin="0,5,0,0"/>
