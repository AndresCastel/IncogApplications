<UserControl x:Class="IncogStuffControl.UserControls.MainBoardParts.RadioUC"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:UpDown="clr-namespace:IncogStuffControl.UtilControls.UpDownButton"
             mc:Ignorable="d" Height="auto" Background="White" Width="auto">
    <StackPanel Name="parentstack" Height="auto"  Width="auto" Background="White" >
        <GroupBox Header="Radios" x:Name="gbxDiasHabiles" Margin="10,10,29,10"  VerticalAlignment="Stretch" Height="auto" Width="auto">

